
pkgname=nano
pkgver=8.1

dependencies=(
	"!$pkgname"
	
)
sources=(
	"https://www.nano-editor.org/dist/v8/nano-8.1.tar.xz"
)

md5sums=(
	'9eb581845590ad70ba89c04509c7a386'
)


kraken_prepare() {
	
	tar -xvf "${SOURCE_DIR}/${pkgname}/${pkgname}-${pkgver}.tar.xz" -C "${SOURCE_DIR}/${pkgname}" &&

	cd "${SOURCE_DIR}/${pkgname}/${pkgname}-${pkgver}" &&

	./configure --prefix=/usr     \
            --sysconfdir=/etc \
            --enable-utf8     \
            --docdir=/usr/share/doc/nano-8.1
}

kraken_build() {
	cd "${build_dir}/${pkgname}/${pkgname}-${pkgver}" &&
	make
}

kraken_check() {
	#cd "${build_dir}/${pkgname}/${pkgname}-${pkgver}" &&
	#make check
	echo "$pkgname does not come with a test suite nothing to do !"  
    return 0
}

kraken_install() {
	cd "${build_dir}/${pkgname}/${pkgname}-${pkgver}" &&
	make install
    return 0
}

kraken_preinstall() {
	echo "nothing to do !"
	return 0
}

kraken_postinstall() {
    install -v -m644 doc/{nano.html,sample.nanorc} /usr/share/doc/nano-8.1
	return 0 
}

kraken_preremove() {
	return
}

kraken_postremove() {
	return
}

